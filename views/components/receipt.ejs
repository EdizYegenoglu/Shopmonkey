<h1>Kassabon</h1>
<div>
    <% order.forEach(function(order) { %>
        <article data-id="<%= order._id %>" data-product="<%= JSON.stringify(order) %>">
            <span data-product-quantity>
                <%= order.product_quantity %>x
            </span>
            <ul>
                <li>
                    <%= order.product_title %>
                </li>
                <li>
                    + <%= order.product_extra %>
                </li>
            </ul>
            <p data-product-price>
                € <%= (parseFloat(order.product_price) * order.product_quantity) + parseFloat(order.product_extra) %>
            </p>
            <form action="/delete/<%= order._id %>" method="POST">
                <button>
                    <img src="../../static/images/close.png" alt="">
                </button>
            </form>
        </article>
        <% }); %>
</div>
<div>
    <p class="total">Totaal:<span> € <%= total %></span></p>
    <button>
        <p>Afrekenen</p>
        <img src="../../static/images/arrow.png" alt="">
    </button>
</div>