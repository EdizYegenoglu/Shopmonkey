<div class="options">
    <fieldset>
        <label for="aantal">Aantal:</label>
        <div class="quantity">
            <input type="number" value="1" min="1" max="100">
            <div>
                <button type="button">
                    <%- include('../../static/icons/add') %>
                </button>
                <button type="button">
                    <%- include('../../static/icons/delete') %>
                </button>
            </div>
        </div>
    </fieldset>

    <fieldset>
        <label class="sausLabel" for="">Sauzen:</label>
        <div>
            <% sausjes.forEach(function(sausjes) { %>
                <label class="sausjes">
                    <input type="checkbox" name="saus" value="<%= sausjes.titel %> ">
                    <img src="<%= sausjes.afbeelding %>" alt="">
                    <div class="infoChoices">
                        <h4>
                            <%= sausjes.titel %>
                        </h4>
                        <p>
                            <%= sausjes.prijs %>
                        </p>
                    </div>
                </label>
                <% }); %>
        </div>

    </fieldset>
</div>

<button class="addToCart" type="button">
    <%- include('../../static/icons/add') %>
        Toevoegen
</button>