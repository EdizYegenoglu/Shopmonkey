<div class="options">
    <fieldset class="quantityFieldset">
        <label for="aantal">Aantal:</label>
        <div class="quantity">
            <input name="quantityInput" type="number" value="1" min="1" max="100">
            <div>
                <button type="button">
                    <%- include('../../static/icons/add') %>
                </button>
                <button type="button">
                    <%- include('../../static/icons/delete') %>
                </button>
            </div>
        </div>
    </fieldset>
    <fieldset>
        <label class="sausLabel" for="">Sauzen:</label>
        <div>
            <% sausjes.forEach(function(sausje) { %>
                <label class="sausjes">
                    <input type="checkbox" name="saus" value="<%= sausje.title %> ">
                    <img src="<%= sausje.image %>" alt="">
                    <div class="infoChoices">
                        <h4>
                            <%= sausje.title %>
                        </h4>
                        <p>
                            <%= sausje.price %>
                        </p>
                    </div>
                </label>
                <% }); %>
        </div>
    </fieldset>
</div>

<button class="addToCart" type="button">
    <%- include('../../static/icons/add') %>
        Toevoegen
</button>