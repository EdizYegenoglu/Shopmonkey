<div class="options">
    <fieldset class="quantityFieldset">
        <label for="aantal">Aantal:</label>
        <div class="quantity">
            <input name="quantity" type="number" value="1" min="1" max="100">
            <div>
                <button type="button" data-way="up">
                    <%- include('../../static/icons/add') %>
                </button>
                <button type="button" data-way="down">
                    <%- include('../../static/icons/delete') %>
                </button>
            </div>
        </div>
    </fieldset>
    <fieldset class="sauzen">
        <label class="sausLabel" for="">Sauzen:</label>
        <div class="none">
            <input id="geen saus" type="radio" name="extra" value="0" checked="checked">
            <label for="geen saus">
                <div class="infoChoices">
                    <h4>
                        geen saus
                    </h4>
                </div>
            </label>
        </div>
        <div class="sausList">
            <% sausjes.forEach(function(sausje) { %>
                <input id="<%= sausje.title %>" type="radio" name="extra" value="<%= sausje.price %>">
                <label for="<%= sausje.title %>" class="sausjes">
                    <img src="<%= sausje.image %>" alt="">
                    <div class="infoChoices">
                        <h4>
                            <%= sausje.title %>
                        </h4>
                        <p>
                            <%= sausje.price %>
                        </p>
                    </div>
                </label>
                <% }); %>
        </div>
    </fieldset>
</div>

<button class="addToCart">
    <%- include('../../static/icons/add') %>
        Toevoegen
</button>